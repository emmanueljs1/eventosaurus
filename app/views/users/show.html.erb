<p>
  <strong>Full name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% @user.invites_received.each do |invite| %>
  <p>
    - <%= link_to invite.inviter.full_name, invite.inviter %> invited <%= invite.invitee.full_name %> to <%= link_to invite.event.title, invite.event %>
  </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
